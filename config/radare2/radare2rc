# Better arrows
e scr.utf8=true

# Turns off the lines next to functions
e asm.fcnlines=false

# Show hints for magic numbers
e asm.hints=true

# Show control flow arrows next to assembly opcodes
e asm.linesright=true

# Add a space between arrows for readability
e asm.lineswide=true

# Show sections
e asm.section=true

# Make the section column smaller
e asm.section.col=15

# Make stack and regs more rebose!
e dbg.slow=true

# Make comments nicer
e asm.cmtright=true

# Show a status thing while debugging
e dbg.status=true

# Show annotated stack
e stack.annotated=true

# Show calling conventions
e asm.calls=true

# Disable jmphints.  These don't seem to have any real worth.
e asm.jmphints=false

# Colors
ec fname rgb:0cf
ec label rgb:0ff
ec math rgb:660
ec bin rgb:f90
ec call rgb:f00
ec jmp rgb:03f
ec cjmp rgb:33c
ec offset rgb:366
ec comment rgb:444
ec push rgb:0c0
ec pop rgb:0c0
ec cmp rgb:060
ec nop rgb:000
ec b0x00 rgb:444
ec b0x7f rgb:555
ec b0xff rgb:666
ec btext rgb:777
ec other rgb:bbb
ec num rgb:f03
ec reg rgb:6f0
ec fline rgb:fc0
ec flow rgb:444
