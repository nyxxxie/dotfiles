# Better arrows
e scr.utf8=true

# Radare doesn't analyze strings by default for some reason...
e anal.strings=true

# Show pretty lines that show where function bounds are
e asm.fcnlines=true

# Turns off the lines next to functions
e asm.fcnlines=false

# Show local variable accesses
e asm.varxs=true

# Show hints for magic numbers
e asm.hints=true

# Going to disable lines for now and see how much I miss them...
e asm.lines=false

# Show control flow arrows next to assembly opcodes
e asm.linesright=true

# Don't add a space between arrows for readability
e asm.lineswide=true

# Don't show OOB lines
e asm.linesout=false

# Max number of columns for lines
e asm.lineswidth=5

# Show sections
e asm.section=true

# Make the section column smaller
e asm.section.col=15

# Make stack and regs more rebose!
e dbg.slow=true

# Prevent that huge space between bytes and asm when lines are enabled
e asm.minicols=true

# Make comments nicer
e asm.cmtright=true

# Make comments appear immediately after asm
e asm.cmtcol=0

# Show a status thing while debugging
e dbg.status=true

# Show annotated stack
e stack.anotated=true

# Show calling conventions
e asm.calls=true

# Disable jmphints.  These don't seem to have any real worth.
e asm.jmphints=false

# Use less as pager for large output
e scr.pager=less

# Auto-adjust screen
e scr.responsive=true

# Give me ALL the fortunes >:)
e cfg.fortunes.type = tips,fun,nsfw,creepy

# Colors
ec fname rgb:0cf
ec label rgb:0ff
ec math rgb:660
ec bin rgb:f90
ec call rgb:f00
ec jmp rgb:03f
ec cjmp rgb:33c
ec offset rgb:366
ec comment rgb:444
ec push rgb:0c0
ec pop rgb:0c0
ec cmp rgb:060
ec nop rgb:000
ec b0x00 rgb:444
ec b0x7f rgb:555
ec b0xff rgb:666
ec btext rgb:777
ec other rgb:bbb
ec num rgb:f03
ec reg rgb:6f0
ec fline rgb:fc0
ec flow rgb:444
