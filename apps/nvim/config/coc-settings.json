// More options at: https://github.com/neoclide/coc.nvim/blob/master/data/schema.json
// Also ignore the scary error highlighting, coc's json parser supports comments
{
  "suggest.echodocSupport": true,
  "signature.enable": true,
  "suggest.maxCompleteItemCount": 20,
  "coc.preferences.formatOnSaveFiletypes": ["javascript", "typescript", "typescriptreact", "json", "javascriptreact"],
  "eslint.filetypes": ["javascript", "typescript", "typescriptreact", "javascriptreact"],
  "diagnostic.errorSign": "!",
  "diagnostic.warningSign": "?",
  "diagnostic.infoSign": "â€¢",

  "coc.preferences.colorSupport": true,

  "json.enable": true,
  "json.format.enable": false,

  "html.enable": true,
  "html.format.enable": true,

  "eslint.enable": true,
  "eslint.autoFix": false,
  "eslint.autoFixOnSave": false,

  "yaml.format.enable": false,
  "yaml.hover": true,
  "yaml.completion": true,
  "yaml.validate": true,

  "css.enable": true,
  "css.validate": true,
  "less.validate": true,
  "wxss.validate": true,
  "scss.validate": true
}
